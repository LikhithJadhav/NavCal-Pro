<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme -->
    <style name="Theme.SplashScreen" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Sets the background for the splash screen -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <!-- Normal Theme (For your Flutter app after splash screen) -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Uses the default background color -->
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
